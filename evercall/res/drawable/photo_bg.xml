<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" > 
    <item 
        android:state_enabled="true" android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/main_background_clicked"/>
            <stroke 
                android:width="0.5dp" 
                 android:color="@color/main_background"
                />
            <corners android:radius="10dp"/>
        </shape>
    </item>
    
    <item 
        android:state_enabled="true" android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/main_background_clicked"/>
            <stroke 
                android:width="0.5dp" 
                 android:color="@color/main_background"
                />
            <corners android:radius="10dp"/>
        </shape>
    </item>
    
    <item 
        android:state_enabled="true" android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/main_background_clicked"/>
            <stroke 
                android:width="0.5dp" 
                 android:color="@color/main_background"
                />
            <corners android:radius="10dp"/>
        </shape>
    </item>
    
    <!-- default background -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@android:color/background_light"/>
            <stroke 
                android:width="0.5dp" 
                android:color="@color/main_background"
                />
            <corners android:radius="3dp"/>
        </shape>
    </item>
</selector>
